{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "removeComments": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*",
    "openapi.yaml"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "coverage",
    "jest.config.js",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "tests/**/*"
  ]
}
