{
  "name": "second-brain-server",
  "version": "1.0.0",
  "description": "A comprehensive personal intelligence platform for knowledge management, creativity, learning, and personal growth",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "yarn clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && node scripts/copy-assets.js",
    "build:prod": "yarn build && node scripts/setup-production.js",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{ts,js}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "validate": "yarn typecheck && yarn lint && yarn test",
    "prepare": "husky install",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:down": "docker-compose down",
    "vercel:dev": "vercel dev",
    "vercel:deploy": "vercel --prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meet-eaysin/second-brain-server.git"
  },
  "keywords": [
    "second-brain",
    "knowledge-management",
    "personal-intelligence",
    "typescript",
    "nodejs",
    "express",
    "mongodb",
    "notion-like",
    "productivity",
    "learning-system"
  ],
  "author": {
    "name": "Eaysin Arafat",
    "email": "eaysin.dev@gmail.com",
    "url": "https://github.com/meet-eaysin"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/meet-eaysin/second-brain-server/issues"
  },
  "homepage": "https://github.com/meet-eaysin/second-brain-server#readme",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "node-cron": "^4.0.7",
    "nodemailer": "^7.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.21",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/node": "^5.3.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "jest-sonar-reporter": "^2.0.0",
    "jest-util": "^30.0.5",
    "lint-staged": "^16.1.2",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vercel": "^44.6.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.9.2+sha512.1fc009bc09d13cfd0e19efa44cbfc2b9cf6ca61482725eb35bbc5e257e093ebf4130db6dfe15d604ff4b79efd8e1e8e99b25fa7d0a6197c9f9826358d4d65c3c"
}
